{
    "compilerOptions": {
        "baseUrl": ".", // This must be here
        "paths": {
            "@/*": [
                "src/*"
            ] // Path alias, let @ point to src
        },
        "jsx": "react-jsx", // If you already have a more complete tsconfig, you can ignore this line
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ESNext"
    },
    "include": [
        "src"
    ]
}